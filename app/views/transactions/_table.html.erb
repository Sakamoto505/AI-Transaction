<table class="expense-table">
  <thead>
  <tr>
    <th>Описание</th>
    <th>Сумма</th>
    <th>Категория</th>
  </tr>
  </thead>
  <tbody>
  <% transactions.each do |t| %>
    <tr>
      <td><%= t.description %></td>
      <td><%= number_to_currency(t.amount, unit: "₽") %></td>
      <td><%= t.category %></td>
    </tr>
  <% end %>
  </tbody>
</table>
