# Ignore bundler config.
/.bundle

# Ignore environment files.
/.env*
!.env.example

# Ignore logs and temp files.
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# Ignore pidfiles, but keep the directory.
/tmp/pids/*
!/tmp/pids/
!/tmp/pids/.keep

# Ignore cache and other Rails temp directories.
/tmp/cache/*
/tmp/sockets/*
!/tmp/cache/
!/tmp/cache/.keep
!/tmp/sockets/
!/tmp/sockets/.keep

# Ignore uploaded files and local storage.
/storage/*
!/storage/.keep
/tmp/storage/*
!/tmp/storage/
!/tmp/storage/.keep

# Ignore compiled assets.
/public/assets
/public/packs
/public/packs-test
/public/vite-dev

# Ignore package manager files.
/node_modules
/yarn-error.log
yarn-debug.log*
npm-debug.log*
/.esbuild

# Ignore SQLite DB files.
*.sqlite3
*.sqlite3-journal

# Ignore master key and credentials.
/config/master.key
/config/credentials/*.key

# Ignore debugger and coverage.
/.byebug_history
/coverage/

# Ignore IDE/project files.
*.swp
*.swo
*.idea/
/.vscode/
/.DS_Store

# GitHub and Kamal: ignore everything except key configs
# Ignore everything in .github except workflows
.github/*
!.github/workflows/
!.github/.keep

# Ignore everything in .kamal except deploy config
.kamal/*
!.kamal/deploy.yml
!.kamal/.keep
