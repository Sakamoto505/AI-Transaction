# Ignore bundler config
/.bundle

# Ignore environment files
/.env*
!.env.example

# Ignore logs and temp files
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# Ignore pidfiles, cache, and sockets, but keep directories
/tmp/pids/*
/tmp/cache/*
/tmp/sockets/*
!/tmp/pids/
!/tmp/pids/.keep
!/tmp/cache/
!/tmp/cache/.keep
!/tmp/sockets/
!/tmp/sockets/.keep

# Ignore uploaded files and local storage
/storage/*
/tmp/storage/*
!/storage/.keep
!/tmp/storage/
!/tmp/storage/.keep

# Ignore compiled assets
/public/assets
/public/packs
/public/packs-test
/public/vite-dev

# Ignore package manager files
/node_modules
/yarn-error.log
yarn-debug.log*
npm-debug.log*
/.esbuild

# Ignore SQLite DB files
*.sqlite3
*.sqlite3-*
/db/*.sqlite3
/db/*.sqlite3-*

# Ignore master key and credentials
/config/master.key
/config/credentials/*.key
/config/credentials.yml.enc
/config/database.yml

# Ignore debugger and coverage
/.byebug_history
/coverage/

# Ignore test artifacts
/spec/examples.txt

# Ignore IDE/project files
*.swp
*.swo
*.iml
/.idea/
/.vscode/
/.DS_Store

# Ignore GitHub and Kamal, except key configs
/.github/*
!/.github/workflows/
!/.github/.keep
/.kamal/*
!/.kamal/deploy.yml
!/.kamal/.keep

# Ignore local configs and Docker files
.rubocop.yml
*.ruby-version.*
.dockerignore
Dockerfile

# Ignore vendor if not needed (e.g., if using bundle)
/vendor/*